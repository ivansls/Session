<Window x:Class="UP02.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UP02"
        mc:Ignorable="d"
        Title="Auth" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBox x:Name="LoginTx" Grid.Row="0"/>
        <TextBox x:Name="PasswordTx" Grid.Row="1"/>
        <Button Grid.Row="2" x:Name="AuthBt" Content="Войти" Click="AuthBt_Click"/>
        <Button Grid.Row="2" Grid.Column="1" Content="Зарегистироваться" Click="Button_Click"/>
    </Grid>
</Window>
